<script>
document.addEventListener('DOMContentLoaded', function() {
    console.log('ÏùºÏ†ïÌëú Í¥ÄÎ¶¨ Ïä§ÌÅ¨Î¶ΩÌä∏ Î°úÎìúÎê®');
    
    const selectAllCheckbox = document.getElementById('selectAll');
    const scheduleCheckboxes = document.querySelectorAll('.schedule-checkbox');
    const bulkActionButtons = document.getElementById('bulkActionButtons');
    const selectedCountSpan = document.getElementById('selectedCount');
    
    console.log('Ï†ÑÏ≤¥ÏÑ†ÌÉù Ï≤¥ÌÅ¨Î∞ïÏä§:', selectAllCheckbox);
    console.log('ÏùºÏ†ï Ï≤¥ÌÅ¨Î∞ïÏä§ Í∞úÏàò:', scheduleCheckboxes.length);
    console.log('ÏùºÍ¥Ñ Ïï°ÏÖò Î≤ÑÌäº:', bulkActionButtons);
    console.log('ÏÑ†ÌÉù Í∞úÏàò ÌëúÏãú:', selectedCountSpan);
    
    // Ï≤¥ÌÅ¨Î∞ïÏä§Í∞Ä Ï†úÎåÄÎ°ú Î°úÎìúÎêòÏóàÎäîÏßÄ ÌôïÏù∏
    if (selectAllCheckbox) {
        console.log('Ï†ÑÏ≤¥ÏÑ†ÌÉù Ï≤¥ÌÅ¨Î∞ïÏä§ Î∞úÍ≤¨');
    } else {
        console.error('Ï†ÑÏ≤¥ÏÑ†ÌÉù Ï≤¥ÌÅ¨Î∞ïÏä§Î•º Ï∞æÏùÑ Ïàò ÏóÜÏäµÎãàÎã§!');
    }
    
    if (scheduleCheckboxes.length > 0) {
        console.log('ÏùºÏ†ï Ï≤¥ÌÅ¨Î∞ïÏä§Îì§ Î∞úÍ≤¨:', scheduleCheckboxes.length + 'Í∞ú');
    } else {
        console.error('ÏùºÏ†ï Ï≤¥ÌÅ¨Î∞ïÏä§Î•º Ï∞æÏùÑ Ïàò ÏóÜÏäµÎãàÎã§!');
    }
    
    // Ï†ÑÏ≤¥ ÏÑ†ÌÉù/Ìï¥Ï†ú Í∏∞Îä•
    if (selectAllCheckbox) {
        selectAllCheckbox.addEventListener('change', function() {
            const isChecked = this.checked;
            console.log('Ï†ÑÏ≤¥ÏÑ†ÌÉù Î≥ÄÍ≤Ω:', isChecked);
            scheduleCheckboxes.forEach(checkbox => {
                checkbox.checked = isChecked;
            });
            updateBulkActionVisibility();
        });
    }
    
    // Í∞úÎ≥Ñ Ï≤¥ÌÅ¨Î∞ïÏä§ Î≥ÄÍ≤Ω Ïãú
    scheduleCheckboxes.forEach(checkbox => {
        checkbox.addEventListener('change', function() {
            console.log('Í∞úÎ≥Ñ Ï≤¥ÌÅ¨Î∞ïÏä§ Î≥ÄÍ≤Ω:', this.value, this.checked);
            updateSelectAllState();
            updateBulkActionVisibility();
        });
    });
    
    // Ï†ÑÏ≤¥ ÏÑ†ÌÉù ÏÉÅÌÉú ÏóÖÎç∞Ïù¥Ìä∏
    function updateSelectAllState() {
        const checkedCount = document.querySelectorAll('.schedule-checkbox:checked').length;
        const totalCount = scheduleCheckboxes.length;
        
        console.log('Ï≤¥ÌÅ¨Îêú Í∞úÏàò:', checkedCount, '/', totalCount);
        
        if (checkedCount === 0) {
            selectAllCheckbox.checked = false;
            selectAllCheckbox.indeterminate = false;
        } else if (checkedCount === totalCount) {
            selectAllCheckbox.checked = true;
            selectAllCheckbox.indeterminate = false;
        } else {
            selectAllCheckbox.checked = false;
            selectAllCheckbox.indeterminate = true;
        }
    }
    
    // ÏùºÍ¥Ñ Ïï°ÏÖò Î≤ÑÌäº ÌëúÏãú/Ïà®ÍπÄ
    function updateBulkActionVisibility() {
        const checkedCount = document.querySelectorAll('.schedule-checkbox:checked').length;
        selectedCountSpan.textContent = checkedCount;
        
        console.log('ÏÑ†ÌÉùÎêú Í∞úÏàò:', checkedCount);
        
        if (checkedCount > 0) {
            bulkActionButtons.style.display = 'block';
        } else {
            bulkActionButtons.style.display = 'none';
        }
    }
    
    // Ï¥àÍ∏∞ ÏÉÅÌÉú ÏÑ§Ï†ï
    updateBulkActionVisibility();
});

// ÏÑ†ÌÉùÌïú ÏùºÏ†ï ÏÇ≠Ï†ú Ìï®Ïàò
function deleteSelected() {
    const selectedCheckboxes = document.querySelectorAll('.schedule-checkbox:checked');
    
    if (selectedCheckboxes.length === 0) {
        alert('ÏÇ≠Ï†úÌï† ÏùºÏ†ïÏùÑ ÏÑ†ÌÉùÌï¥Ï£ºÏÑ∏Ïöî.');
        return;
    }
    
    // ÏÑ†ÌÉùÎêú ÏùºÏ†ï Ï†ïÎ≥¥ ÏàòÏßë
    const selectedSchedules = [];
    selectedCheckboxes.forEach(checkbox => {
        selectedSchedules.push({
            uid: checkbox.value,
            name: checkbox.getAttribute('data-schedule-name')
        });
    });
    
    // ÌôïÏù∏ Î©îÏãúÏßÄ
    let confirmMessage = 'ÏÑ†ÌÉùÌïú ' + selectedSchedules.length + 'Í∞úÏùò ÏùºÏ†ïÏùÑ ÏÇ≠Ï†úÌïòÏãúÍ≤†ÏäµÎãàÍπå?\n\n';
    selectedSchedules.forEach(schedule => {
        confirmMessage += '‚Ä¢ ' + schedule.name + '\n';
    });
    
    if (!confirm(confirmMessage)) {
        return;
    }
    
    // ÏÇ≠Ï†ú ÏöîÏ≤≠
    const selectedUids = selectedSchedules.map(schedule => schedule.uid);
    
    fetch('/admin/schedule_info/bulk-delete', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
            'X-Requested-With': 'XMLHttpRequest'
        },
        body: JSON.stringify({
            uids: selectedUids
        })
    })
    .then(response => {
        if (!response.ok) {
            throw new Error('Network response was not ok');
        }
        return response.json();
    })
    .then(data => {
        if (data.success) {
            alert(data.deletedCount + 'Í∞úÏùò ÏùºÏ†ïÏù¥ ÏÑ±Í≥µÏ†ÅÏúºÎ°ú ÏÇ≠Ï†úÎêòÏóàÏäµÎãàÎã§.');
            location.reload();
        } else {
            alert('ÏÇ≠Ï†ú Ï§ë Ïò§Î•òÍ∞Ä Î∞úÏÉùÌñàÏäµÎãàÎã§: ' + (data.message || 'Ïïå Ïàò ÏóÜÎäî Ïò§Î•ò'));
        }
    })
    .catch(error => {
        console.error('Error:', error);
        alert('ÏÇ≠Ï†ú Ï§ë Ïò§Î•òÍ∞Ä Î∞úÏÉùÌñàÏäµÎãàÎã§.');
    });
}

// ÏÑ±Í≥µ Î©îÏãúÏßÄ ÌëúÏãú Ìï®Ïàò
function showSuccessMessage(message) {
    const alertDiv = document.createElement('div');
    alertDiv.className = 'alert alert-success alert-floating';
    alertDiv.innerHTML = '<i class="fas fa-check-circle me-2"></i>' + message;
    
    document.body.appendChild(alertDiv);
    
    setTimeout(() => {
        alertDiv.style.animation = 'slideOut 0.3s ease-out';
        setTimeout(() => alertDiv.remove(), 300);
    }, 3000);
}

